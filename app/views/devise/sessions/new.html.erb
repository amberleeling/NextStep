<h2 class="text-[22px] font-bold mb-4 mt-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "text-gray-700 text-lg" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg focus:border-gray-400 focus:outline-none", placeholder: "email" %>
  </div>

  <div class="field mt-4">
    <%= f.label :password, class: "text-gray-700 text-lg" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg focus:border-gray-400 focus:outline-none", placeholder: "password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-4">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-gray-700" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Submit", class: "w-full px-4 py-2 mt-6 mb-4 text-white bg-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-opacity-50" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
