<h2 class="text-[22px] font-bold mb-4 mt-4">Application Tracker ðŸ¤ž</h2>

<div class="flex flex-col gap-4">
  <div class="bg-white p-6 rounded-lg shadow">
    <div class="relative h-64">
      <canvas
        data-controller="chart"
        data-chart-type="doughnut"
        data-chart-pending-percent-value="<%= @pending_percentage %>"
        data-chart-labels-value='["Pending", "Completed"]'
        data-chart-data-value='[<%= @pending_percentage %>, <%= 100 - @pending_percentage %>]'
        data-chart-colors-value='["#FFA500", "#4CAF50"]'
      ></canvas>
    </div>
    <div class="flex justify-center mt-4 gap-6">
      <div class="flex items-center">
        <div class="w-3 h-3 rounded-full bg-[#FFA500] mr-2"></div>
        <span>Pending (<%= @pending_percentage %>%)</span>
      </div>
      <div class="flex items-center">
        <div class="w-3 h-3 rounded-full bg-[#4CAF50] mr-2"></div>
        <span>Completed (<%= 100 - @pending_percentage %>%)</span>
      </div>
    </div>
  </div>
</div>
