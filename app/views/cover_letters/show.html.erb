<h2 class="text-[22px] font-bold mb-4 mt-4">AI Cover Letter üìù</h2>

<%= turbo_stream_from "user_#{current_user.id}_cover_letter_form" %>
<%= turbo_frame_tag "cover_letter_form" do %>
  <%= form_with(url: cover_letters_path, method: :post) do |f| %>
    <div class="form-group">
      <%= f.label :company, style: "margin-bottom: 8px; display: block;" %>
      <%= f.text_field :company, value: @job&.company, class: "form-control", placeholder: "Company" %>
    </div>

    <div class="form-group">
      <%= f.label :position, style: "margin-bottom: 8px; display: block;" %>
      <%= f.text_field :position, value: @job&.position, class: "form-control", placeholder: "Position" %>
    </div>

    <div class="form-group">
      <%= f.label :job_description, style: "margin-bottom: 8px; display: block;" %>
      <%= f.text_area :job_description, value: @job&.description, class: "form-control", placeholder: "Job description" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-dark" %>
  <% end %>
<% end %>

<style>
.container {
  padding: 20px;
  max-width: 600px;
  margin: 0 auto;
}

.logo {
  max-width: 150px;
  margin-bottom: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.form-control {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.btn {
  width: 100%;
  padding: 12px;
  background: #333;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
</style>
