<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>
<div class="container">
  <%= render 'shared/navbar' %>
  <h2 style="font-size: 22px; font-weight: 600; text-align: center; margin-top: 24px; margin-bottom: 24px;">+ AI Cover Letter</h2>

  <%= form_with(model: @application, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :company, style: "margin-bottom: 8px; display: block;" %>
      <%= f.text_field :company, class: "form-control", placeholder: "Company" %>
    </div>

    <div class="form-group">
      <%= f.label :position, style: "margin-bottom: 8px; display: block;" %>
      <%= f.text_field :position, class: "form-control", placeholder: "Position" %>
    </div>

    <div class="form-group">
      <%= f.label :job_description, style: "margin-bottom: 8px; display: block;" %>
      <%= f.text_area :job_description, class: "form-control", placeholder: "Job description" %>
    </div>


    <%= f.submit "Submit", class: "btn btn-dark" %>
  <% end %>
</div>


  <%= yield %>
  <%= render 'shared/tabbar' %>
</body>




<style>
.container {
  padding: 20px;
  max-width: 600px;
  margin: 0 auto;
}

.logo {
  max-width: 150px;
  margin-bottom: 20px;
}

h2 {
  margin-bottom: 30px;
  font-size: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.form-control {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.btn {
  width: 100%;
  padding: 12px;
  background: #333;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
</style>
